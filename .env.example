# ===========================================================================
# Environment Configuration
# Copy to .env and fill in your secrets
# ===========================================================================

FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=change-me-to-a-long-random-string

# MySQL
DATABASE_URL=mysql+pymysql://root:jpassword@127.0.0.1:3306/leaderboard_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Scoring Weights (override exam-level defaults globally)
DEFAULT_WEIGHT_CODING=50
DEFAULT_WEIGHT_QUIZ=30
DEFAULT_WEIGHT_ASSESSMENT=20

# Leaderboard cache TTL (seconds)
LEADERBOARD_CACHE_TTL=5
